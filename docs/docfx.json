{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**"
          ]
        }
      ],
      "dest": "api",
      "includePrivateMembers": false,
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "*.md",
          "toc.yml"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "img/**",
          "articles/img/**"
        ]
      }
    ],
    "globalMetadata": {
      "_appTitle": "TrueLayer.NET Documentation",
      "_appName": "TrueLayer.NET",
      "_appLogoPath": "img/tl-logo.svg",
      "_appFaviconPath": "img/tl-logo.svg",
      "_enableSearch": true,
      "_gitContribute": {
        "repo": "https://github.com/TrueLayer/truelayer-dotnet",
        "branch": "main"
      },
      "_gitUrlPattern": "github"
    },
    "fileMetadata": {
      "_disableContribution": {
        "api/**.yml": true
      }
    },
    "template": [
      "default"
    ],
    "markdownEngineName": "markdig",
    "markdownEngineProperties": {
      "markdigExtensions": [
        "advanced"
      ]
    },
    "xrefService": [
      "https://xref.docs.microsoft.com/query?uid={uid}"
    ],
    "dest": "_site"
  }
}
