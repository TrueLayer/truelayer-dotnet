  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\src\Sdk\Sdk.csproj"/>
  </ItemGroup>
  <ItemGroup Label="Output Files">
    <None Update="appsettings.*" CopyToOutputDirectory="PreserveNewest" />
